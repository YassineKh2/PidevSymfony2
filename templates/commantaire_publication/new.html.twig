{% extends 'base.html.twig' %}

{% block title %}New Commantaire{% endblock %}

{% block body %}
<style>
 h1{
    margin-top: 150px;
 }
 .addcom{
     width: 50%;
     margin-bottom: 50px;
     display: flex;
     flex-direction: column;
     column-gap: 10px;
     align-items: center;
     justify-content: center;
     margin-left: auto;
     margin-right: auto;
 }
 .form{
     display: flex;
     flex-direction: column;
 }
</style>
   <div class="addcom">
       <h1>Add Commentaire</h1>

       <div class="form">
           {{ form_start(form,{'attr': {'novalidate': 'novalidate'}} ) }}
           {% for message in app.flashes('error') %}
               <div class="p-3 my-2 rounded-1 blue light-4 text-blue text-dark-3 bd-solid bd-blue bd-light-1 bd-1">{{ message }}</div>

           {% endfor %}
           <div>{{ form_widget(form.ContenuCommantaire , {'attr':{'class':'form-control'}}) }}</div>
           <button class="btn btn-primary">{{ button_label|default('Add') }}</button>
           {{ form_end(form) }}
       </div>

       <a href="{{ path('app_commantaire_publication_index') }}">back to list</a>
   </div>
{% endblock %}
