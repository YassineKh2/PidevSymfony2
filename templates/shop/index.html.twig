        <div class="row px-xl-5 pb-3 categ">
            {% for categorie in categories %}
            <div class="col-lg-3 col-md-4 col-sm-6 pb-1">
                <a class="text-decoration-none" href="{{ path('app_articles',{'id' : categorie.id}) }}">
