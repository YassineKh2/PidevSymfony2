



{% extends 'baseBack.html.twig' %}

{% block title %}ActiviteCentre{% endblock %}

{% block body %}
    <div class="content-body">
        <!-- row -->
        <div class="container-fluid">
            <div class="row">
                <div class="col-xl-8 col-lg-8 col-md-8">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title"> Centre</h4>
                            <br><br><br>
                        </div>
                        <div align="center">
                            <div class="col-lg-12 grid-margin stretch-card">
                                <div class="card">
                                    <div class="card-body">
                                        <br>

                                        <div class="table-responsive">
                                            <table class="table table-striped">
                                                <tbody>
                                                <tr>
                                                    <th>Id</th>
                                                    <td>{{ centre.id }}</td>
                                                </tr>

                                                <tr>
                                                    <th>Nom du centre</th>
                                                    <td>{{ centre.NomCentre }}</td>
                                                </tr>
                                                <tr>
                                                    <th>Numero de telephone</th>
                                                    <td>{{ centre.CapaciteCentre }}</td>
                                                </tr>
                                                <tr>
                                                    <th>Nom du centre</th>
                                                    <td>{{ centre.localisation }}</td>
                                                </tr>
                                                <tr>
                                                    <th>Nombre des blocs</th>
                                                    <td>{{ centre.NombreBlocCentre }}</td>
                                                </tr>

                                                </tbody>
                                            </table>
                                            <button class="btn btn-primary mr-2">
                                                <a href="{{ path('app_centre_index') }}">Retour</a>
                                                <button class="btn btn-primary mr-2"><a href="{{ path('app_centre_edit', {'id': centre.id}) }}">Edit</a></button>
                                                <br/>
                                                <br/>



                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

