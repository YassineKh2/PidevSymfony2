{% extends 'baseBack.html.twig' %}

{% block title %}Adresse index{% endblock %}

{% block body %}

    <div class="content-body" style="min-height: 876px;">
        <div class="container-fluid">

            <h1>manager les adresse</h1>





            <div class="adresse">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">LES ADRESSE</h4>

                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead class="thead-primary">
                                    <tr>
                                        <th scope="col">id</th>
                                        <th scope="col">Nom Rue</th>
                                        <th scope="col">Num Rue</th>
                                        <th scope="col">Code Postal</th>
                                        <th scope="col">Gouvernorat</th>
                                        <th scope="col">action</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for adresse in adresses %}
                                        <tr>
                                            <td>{{ adresse.id  }}</td>
                                            <td>{{ adresse.NomRue }}</td>
                                            <td>{{ adresse.NumRue }}</td>
                                            <td>{{ adresse.CodePostal }}</td>
                                            <td>{{ adresse.Gouvernorat }}</td>
                                            <td>
                                                <form method="post" action="{{ path('app_adresse_delete', {'id': adresse.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                                    <button href="{{ path('app_adresse_delete', {'id': adresse.id}) }}" title="Supprimer" class="fa fa-trash-o color-danger border-0" >
                                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ adresse.id) }}">
                                                    </button>
                                                </form>
                                                <a href="{{ path('app_adresse_edit', {'id': adresse.id}) }}">edit</a>
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="5">no records found</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                                <a class="btn btn-outline-secondary mb-2" href="{{ path('app_adresse_new') }}">Ajouter Adresse</a>
                            </div>
                        </div>
                    </div>
                </div>





            </div>
        </div>
    </div>

{% endblock %}




