{% extends 'base.html.twig' %}



{% block body %}
<!DOCTYPE html>
<html lang="en">
{% block title %}Session index{% endblock %}
<head>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">



    <!-- Bootstrap core CSS -->
    <link href="{{asset('Front/session/vendor/bootstrap/css/bootstrap.min.css')}}" rel="stylesheet">

    <!-- Additional CSS Files -->
    <link rel="stylesheet" href="{{asset('Front/session/assets/css/fontawesome.css')}}">
    <link rel="stylesheet" href="{{asset('Front/session/assets/css/templatemo-space-dynamic.css')}}">
    <link rel="stylesheet" href="{{asset('Front/session/assets/css/animated.css')}}">
    <link rel="stylesheet" href="{{asset('Front/session/assets/css/owl.css')}}">
    <!--

    TemplateMo 562 Space Dynamic

    https://templatemo.com/tm-562-space-dynamic

    -->
</head>

    <div class="main-banner wow fadeIn" id="top" data-wow-duration="1s" data-wow-delay="0.5s" >
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="row">
                        <div class="col-lg-6 align-self-center">
                            <div class="left-content header-text wow fadeInLeft" data-wow-duration="1s" data-wow-delay="1s">
                                <h6>Bienvenue sur Session "{{ session.getNomSession() }}"</h6>
                                <h2>Live: <em>{{ session.DateDebutSession |format_date(locale='en')}}</em> <p>Prix: {{ session.Despense.getMontantDespense() }} DT/mo</p> </h2>
                                <p>{{ session.getDescriptionSession()}} </p><a href="{{ path('app_stripe', {'id': session.id}) }}" target="_parent" style="display:inline-block; padding:12px 24px; font-size:16px; font-weight:bold; text-align:center; text-decoration:none; text-transform:uppercase; letter-spacing:1px; color:#ffffff; background-color:rgba(103,248,217,0.85); border-radius:5px; border:2px solid rgb(245,242,242); transition:background-color 0.3s ease, color 0.3s ease;">S'abonner</a>


                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="right-image wow fadeInRight" data-wow-duration="1s" data-wow-delay="0.5s">
                                <img src="{{ asset(session.ImageSession)}}" alt="team meeting">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

{% for message in app.flashes('error') %}
    <div class="p-3 my-2 rounded-1 red light-4 text-red text-dark-4" >{{ message }}</div>

{% endfor %}
<!-- Scripts -->
<script src="{{asset('Front/session/vendor/jquery/jquery.min.js')}}"></script>
<script src="{{asset('Front/session/vendor/bootstrap/js/bootstrap.bundle.min.js')}}"></script>
<script src="{{asset('Front/session/assets/js/owl-carousel.js')}}"></script>
<script src="{{asset('Front/session/assets/js/animation.js')}}"></script>
<script src="{{asset('Front/session/assets/js/imagesloaded.js')}}"></script>
<script src="{{asset('Front/session/assets/js/templatemo-custom.js')}}"></script>

{%endblock %}
