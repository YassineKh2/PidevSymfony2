{% extends 'baseBack.html.twig' %}

{% block title %}Organisateur index{% endblock %}

{% block body %}
    <h1>manager des evenement</h1>

    <div class="content-body" style="min-height: 876px;">
        <div class="container-fluid">

            <h1>manager des evenement</h1>

            <div class="organisateur">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">LES ORGANISATEUR</h4>

                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead class="thead-primary">
                                    <tr>
                                        <th scope="col">id</th>
                                        <th scope="col">Nom Organisateur</th>
                                        <th scope="col">Num Tel Organisateur</th>
                                        <th scope="col">PourcentageRevenuOrganisateur</th>

                                        <th scope="col">action</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for organisateur in organisateurs %}
                                        <tr>
                                            <td>{{ organisateur.id  }}</td>
                                            <td>{{ organisateur.NomOrganisateur }}</td>
                                            <td>{{ organisateur.NumTelOrganisateur }}</td>
                                            <td>{{organisateur.PourcentageRevenuOrganisateur }}</td>

                                            <td>
                                                <form method="post" action="{{ path('app_organisateur_delete', {'id': organisateur.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                                    <button href="{{ path('app_organisateur_delete', {'id': organisateur.id}) }}" title="Supprimer" class="fa fa-trash-o color-danger border-0" >
                                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ organisateur.id) }}">
                                                    </button>
                                                </form>
                                                <a href="{{ path('app_organisateur_edit', {'id': organisateur.id}) }}">edit</a>
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="5">no records found</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                                <a class="btn btn-outline-secondary mb-2" href="{{ path('app_organisateur_new') }}">Ajouter Organisateur</a>
                            </div>
                        </div>
                    </div>
                </div>





            </div>
        </div>
    </div>

{% endblock %}




