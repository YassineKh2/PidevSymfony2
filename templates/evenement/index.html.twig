{% extends 'baseBack.html.twig' %}

{% block title %}Evenement{% endblock %}

{% block body %}
    <style>
        .eventimg{
             min-width: 100%;
            min-height: 100%;

            height: 25vh;
            width: 25vh;
            object-fit: cover;
        }
        button:hover}
            color: red;
        }
        .rounded-corners}
            border-radius: 10%;
        }
    </style>
<div class="content-body" style="min-height: 876px;">
    <div class="container-fluid">

    <h1 class="text-center">Gestion d'événements</h1>





        <div class="events">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">LES EVENEMENT</h4>

                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">
                                <thead class="thead-primary text-center">
                                <tr>
                                    <th scope="col">id</th>
                                    <th scope="col">Nom Evenement</th>
                                    <th scope="col">Date Evenement</th>
                                    <th scope="col">Nombre Participant Evenement</th>
                                    <th scope="col">description</th>
                                    <th scope="col">Image Evenement</th>
                                    <th scope="col">Prix Evenement</th>
                                    <th scope="col">Type Evenement</th>
                                    <th scope="col">action</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for evenement in evenements %}
                                    <tr>
                                        <td>{{ evenement.id  }}</td>
                                        <td>{{ evenement.NomEvenement }}</td>
                                        <td>{{ evenement.DateEvenement ? evenement.DateEvenement|date('Y-m-d') : ''  }}</td>
                                        <td>{{ evenement.NombreParticipantEvenement }}</td>
                                        <td>{{ evenement.Description }}</td>
                                        <td><img class="eventimg" src="{{ asset(evenement.Imageevenement) }}" width="100" height="100"  class="rounded-corners"></td>
                                        <td>{{ evenement.PrixEvenement}}</td>
                                        <td>{{ evenement.TypeEvenement }}</td>
                                        <td>
                                            <form method="post" action="{{ path('app_evenement_delete', {'id': evenement.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                                <button href="{{ path('app_evenement_delete', {'id': evenement.id}) }}" title="Supprimer" class="fa fa-trash-o color-danger border-0" >
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ evenement.id) }}">
                                                </button>
                                            </form>
                                            <a href="{{ path('app_evenement_edit', {'id': evenement.id}) }}">edit</a>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="5">no records found</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>

                            <a class="btn btn-outline-secondary mb-2" href="{{ path('app_evenement_new') }}">Ajouter Evenement</a>
                        </div>
                    </div>
                </div>
            </div>





    </div>
</div>
</div>

{% endblock %}






