                                <a class="btn btn-outline-dark btn-square" href="{{ path("app_article_ajouter_panier",{'id' : article.id, 'quantity': 1}) }}"><i class="fa fa-shopping-cart"></i></a>
                                <a class="btn btn-outline-dark btn-square" href="{{ path('app_article',{'id' :article.id }) }}"><i class="fa fa-search"></i></a>
                            </div>
                        </div>
                        <div class="text-center py-4">
                            <a class="h6 text-decoration-none text-truncate" href="{{ path('app_article',{'id' :article.id }) }}">{{ article.NomArticle }}</a>
                            <div class="d-flex align-items-center justify-content-center mt-2">
                                {% if (article.RemisePourcentageArticle != 0)  and (article.RemisePourcentageArticle != null) %}
