<br><br>

    <div class="container-fluid pt-5 pb-3">
        <h1 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class=" pr-3">NOS EVENEMENTS</span></h1>
        <div class="row px-xl-5">
            {% for evenement in evenements %}

                  <div class="col-lg-3 col-md-4 col-sm-6 pb-1" >
                      <a href="{{ path('app_evenement_show',{'id' :evenement.id  }) }}">
                    <div class="align-items-stretch  bg-light mb-4">
                        <div class=" card event-img position-relative overflow-hidden">
                            <img class="img-fluid card-img EventimgSize " src="{{ asset(evenement.Imageevenement) }}" alt="">

                        </div>
                        <div class="text-center py-4">
                            <a class="h4 text-xl-left text-truncate" href="{{ path('app_evenement_show',{'id' :evenement.id  }) }}">{{ evenement.NomEvenement }}</a>
                            <div class="d-flex align-items-center justify-content-center mt-2">

                                <h5 class="dateevent">{{ evenement.DateEvenement ? evenement.DateEvenement|date('Y-m-d') : ''  }}</h5>
                            </div>
                            <h6> {{ evenement.TypeEvenement }}</h6>

                            <h6>{{ evenement.numberoflikes }} people liked this event</h6>
                            <h6>{{ evenement.PlacesRestantes }} places restante</h6>

                        </div>
                    </div>
                 </div>
            </a>
            {% endfor %}
        </div>
    </div>




        <style>
            .EventimgSize{
                min-width: 100%;
                min-height: 100%;
                max-width: 100%;
                max-height: 100%;
                height: 30vh;
                width: 20vh;
                object-fit: cover;
            }
            button:hover{
                color: red;
            }
            .rounded-corners{
                border-radius: 10%;
            }
        </style>



